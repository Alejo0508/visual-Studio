@model escuelaMVC.Models.alumno

@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron" style="border:solid 2px #ef6c00">
    <div class="row">
        <div class="col-md-8" style="margin-top: 50px;">
            <h1 style="color: #ef6c00;">Editar Informacion</h1>
            <p class="lead">Edita la informacion del alumno que necesites.</p>
        </div>

        <div class="col-md-4">
            <img style="height: 300px; width: 250px;" src="data:image/svg+xml;base64," />
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.mat_alu)

        <div class="form-group" style="margin-left: 100px;">
            <div class="col-md-4">
                <a style="margin-bottom: 10px; font-size:18px;">Nombre</a>
                @Html.EditorFor(model => model.nom_alu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_alu, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                <a style="margin-bottom: 10px; font-size:18px;">Edad</a>
                @Html.EditorFor(model => model.edad_alu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.edad_alu, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                <a style="margin-bottom: 10px; font-size:18px;">Semestre</a>
                @Html.EditorFor(model => model.sem_alu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sem_alu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 200px; margin-top: 40px;">
            <div class="col-md-5">
                <a style="margin-bottom: 10px; font-size:18px;">Genero</a>
                @Html.EditorFor(model => model.gen_alu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gen_alu, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-5">
                <a style="margin-bottom: 10px; font-size:18px;">Carrera</a>
                @Html.DropDownList("clave_c1", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.clave_c1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 350px; margin-top: 40px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
